pipeline {
    agent any
    
    stages {
        /*stage('checkout') {
            steps {
                echo 'Checking out !!'
                script {
                    git 'https://github.com/rohitkhandagale19/TestAutomationFramework.git'
                }
            }
        }*/
        
        stage('compile') {
            steps {
                echo 'Compiling'
                bat 'mvn compile'
            }
        }
        
        stage('test') {
            steps {
                echo 'Testing'
                bat 'mvn test'
            }
            
            post {
                success {
                    script {
                        // Print statement for generating Allure reports
                        echo 'Generating Allure reports...'
                        
                        // Generate Allure report
                        bat "allure generate ${env.WORKSPACE}/target/allure-results -o ${env.WORKSPACE}/target/allure-reports"
                        
                        // Archive Allure report artifacts
                        archiveArtifacts artifacts: 'target/allure-reports/**', followSymlinks: false
                        
                        // Delete HTML report if it's generated by default
                        deleteDir(dir: 'target/surefire-reports')
                    }
                }
            }
        }

        /* stage('package') {
            steps {
                echo 'Building'
                bat 'mvn clean package'
            }
        } */
    }
    
    post {
        always {
            echo 'Pipeline finished!'
        } 
    }
}
