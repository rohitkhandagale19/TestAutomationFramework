pipeline {
    agent any
    
    stages {
        stage('checkout') {
            steps {
                echo 'Checking out !!'
                script {
                    git 'https://github.com/rohitkhandagale19/TestAutomationFramework.git'
                }
            }
        }
        
        stage('compile') {
            steps {
                echo 'Compiling'
                bat 'mvn compile'
            }
        }
        
        stage('build') {
            steps {
                echo 'Building and testing'
                bat 'mvn clean test'
            }
        }
    }
    
    post {
        success {
            echo 'Pipeline succeeded! Archiving artifacts...'
            archiveArtifacts artifacts: 'target/surefire-reports/emailable-report.html', followSymlinks: false
        }
        
        always {
            echo 'Pipeline finished!'
            // Optionally, perform cleanup or notification tasks here
        }
    }
}
